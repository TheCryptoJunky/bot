# Database Settings
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=crypto_trading_bot

# Logging Settings (using MySQL for centralized logging)
LOGGING_METHOD=database  # Use 'database' to log directly to MySQL, or 'file' for text-based logging
LOG_DB_TABLE=bot_logs    # The table used for logging in MySQL
LOG_LEVEL=INFO           # Set the log level (INFO, DEBUG, ERROR)

# Trade Execution Settings
TRADE_API_KEY=your_trade_api_key
TRADE_API_SECRET=your_trade_api_secret

# Bot Configuration (Optional, based on specific bots)
BOT_NAME=RevengeBot
MAX_TRADE_SIZE=1000
MIN_TRADE_SIZE=10
TRADE_TIMEOUT=30  # in seconds

# Safety Parameters
CIRCUIT_BREAKER_THRESHOLD=5000  # Maximum allowed market volatility
REORG_CHECK_ENABLED=true         # Enable blockchain reorganization checks
POISON_TOKEN_CHECK_ENABLED=true  # Enable poison token safety checks

# AI Model Settings
AI_MODEL_PATH=models/trading_ai_model.h5
AI_RETRAIN_INTERVAL=7  # Days to retrain the AI model

# List Management Settings
WHITELIST_AUTO_UPDATE=false      # Auto-update whitelisted tokens
BLACKLIST_AUTO_UPDATE=true       # Auto-update blacklisted tokens
REDLIST_AUTO_UPDATE=true         # Aggressive targets redlist
PUMPLIST_AUTO_MANAGEMENT=true    # AI-driven management of the pumplist

# Optional: Other environment variables for external APIs or services
EXTERNAL_API_KEY=your_external_api_key
EXTERNAL_API_URL=https://api.external_service.com
